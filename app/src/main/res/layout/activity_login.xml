<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e2cfcf"

    tools:context="zhouqi.com.myshopping.Presention.main.myself.LoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="昵称"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/textView6"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_login_nickname"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_100dp"
            android:layout_alignBottom="@+id/iv_login_icon"
            android:layout_toEndOf="@+id/textView6" />

        <ImageView
            android:background="@drawable/ic_person_accent"
            android:clickable="true"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/iv_login_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国家/地区"
            android:id="@+id/textView8"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国"
            android:id="@+id/textView10"
            android:layout_marginEnd="33dp"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:background="@drawable/ic_person_accent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView8"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/et_login_email"
            android:hint="手机号/邮箱"
            android:background="@null"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/imageView8" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:background="@drawable/ic_lock_accent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView9"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/et_login_first_passwrod"
            android:hint="请输入密码"
            android:background="@null"
            android:singleLine="true"
            android:password="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView9"
             />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <ImageView
            android:background="@drawable/ic_lock_accent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView10"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/et_login_second_password"
            android:hint="请再次密码"
            android:background="@null"
            android:singleLine="true"
            android:password="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView10" />
    </RelativeLayout>

    <Button
        android:background="@color/green"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/bt_register"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
