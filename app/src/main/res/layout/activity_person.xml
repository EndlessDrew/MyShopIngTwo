<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zhouqi.com.myshopping.Presention.main.myself.PersonActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_person_title"
            android:layout_width="match_parent"
            android:background="@color/green"
            android:layout_height="50dp">
        </android.support.v7.widget.Toolbar>
        <ImageView
            android:id="@+id/iv_person_more"
            android:src="@drawable/more"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:clickable="true"
            android:id="@+id/tv_person_cancel"
            android:visibility="gone"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="取消"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="3"
            android:id="@+id/ll_person_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/lv_per_goods"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </LinearLayout>
        <RelativeLayout
            android:background="#dabbbb"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal">
            <Button
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="退出登陆"
                android:id="@+id/bt_exit"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:layout_margin="1dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bt_exit"
                android:layout_alignParentStart="true">

                <Button
                    android:layout_margin="2dp"
                    android:textSize="20dp"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:textColor="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="全选"
                    android:id="@+id/bt_select_all" />

                <Button
                    android:layout_margin="2dp"
                    android:textSize="20dp"
                    android:background="@color/white"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="删除"
                    android:id="@+id/bt_delete" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
